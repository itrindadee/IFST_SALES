    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 1337,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "type": "pwa-node"
        }
    ]
}