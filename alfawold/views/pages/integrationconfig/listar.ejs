<!-- views/integrationConfig/list.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Configurações de Integração</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Configurações de Integração</h1>

    <!-- Botão para adicionar nova integração -->
    <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#addIntegrationModal">Adicionar Integração</button>

    <!-- Tabela de integrações -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Endpoint</th>
          <th>Método</th>
          <th>Ativo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% configs.forEach(config => { %>
          <tr>
            <td><%= config.id %></td>
            <td><%= config.nome %></td>
            <td><%= config.endpoint %></td>
            <td><%= config.metodo %></td>
            <td><%= config.ativo ? 'Sim' : 'Não' %></td>
            <td>
              <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editIntegrationModal<%= config.id %>">Editar</button>
              <button class="btn btn-danger btn-sm" onclick="deleteIntegration(<%= config.id %>)">Deletar</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Modal para adicionar integração -->
    <div class="modal fade" id="addIntegrationModal" tabindex="-1" role="dialog" aria-labelledby="addIntegrationModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addIntegrationModalLabel">Adicionar Integração</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="addIntegrationForm">
              <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" required>
              </div>
              <div class="form-group">
                <label for="endpoint">Endpoint:</label>
                <input type="text" class="form-control" id="endpoint" name="endpoint" required>
              </div>
              <div class="form-group">
                <label for="metodo">Método:</label>
                <select class="form-control" id="metodo" name="metodo" required>
                  <option value="GET">GET</option>
                  <option value="POST">POST</option>
                  <option value="PUT">PUT</option>
                  <option value="DELETE">DELETE</option>
                </select>
              </div>
              <div class="form-group">
                <label for="headers">Headers (JSON):</label>
                <textarea class="form-control" id="headers" name="headers"></textarea>
              </div>
              <div class="form-group">
                <label for="payload">Payload (JSON):</label>
                <textarea class="form-control" id="payload" name="payload"></textarea>
              </div>
              <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="ativo" name="ativo">
                <label class="form-check-label" for="ativo">Ativo</label>
              </div>
              <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Modals de edição de integração (um para cada integração) -->
    <% configs.forEach(config => { %>
      <div class="modal fade" id="editIntegrationModal<%= config.id %>" tabindex="-1" role="dialog" aria-labelledby="editIntegrationModalLabel<%= config.id %>" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editIntegrationModalLabel<%= config.id %>">Editar Integração</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id="editIntegrationForm<%= config.id %>">
                <input type="hidden" name="id" value="<%= config.id %>">
                <div class="form-group">
                  <label for="nome<%= config.id %>">Nome:</label>
                  <input type="text" class="form-control" id="nome<%= config.id %>" name="nome" value="<%= config.nome %>" required>
                </div>
                <div class="form-group">
                  <label for="endpoint<%= config.id %>">Endpoint:</label>
                  <input type="text" class="form-control" id="endpoint<%= config.id %>" name="endpoint" value="<%= config.endpoint %>" required>
                </div>
                <div class="form-group">
                  <label for="metodo<%= config.id %>">Método:</label>
                  <select class="form-control" id="metodo<%= config.id %>" name="metodo" required>
                    <option value="GET" <% if (config.metodo === 'GET') { %>selected<% } %>>GET</option>
                    <option value="POST" <% if (config.metodo === 'POST') { %>selected<% } %>>POST</option>
                    <option value="PUT" <% if (config.metodo === 'PUT') { %>selected<% } %>>PUT</option>
                    <option value="DELETE" <% if (config.metodo === 'DELETE') { %>selected<% } %>>
                      <option value="DELETE" <% if (config.metodo === 'DELETE') { %>selected<% } %>>DELETE</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="headers<%= config.id %>">Headers (JSON):</label>
                    <textarea class="form-control" id="headers<%= config.id %>" name="headers"><%= JSON.stringify(config.headers, null, 2) %></textarea>
                  </div>
                  <div class="form-group">
                    <label for="payload<%= config.id %>">Payload (JSON):</label>
                    <textarea class="form-control" id="payload<%= config.id %>" name="payload"><%= JSON.stringify(config.payload, null, 2) %></textarea>
                  </div>
                  <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="ativo<%= config.id %>" name="ativo" <% if (config.ativo) { %> checked <% } %>>
                    <label class="form-check-label" for="ativo<%= config.id %>">Ativo</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Adicione os scripts do Bootstrap e jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Scripts para manipulação do formulário -->
    <script>
      document.getElementById('addIntegrationForm').addEventListener('submit', async function(event) {
        event.preventDefault();
        const formData = new FormData(event.target);
        const data = Object.fromEntries(formData.entries());
        data.headers = JSON.parse(data.headers || '{}');
        data.payload = JSON.parse(data.payload || '{}');
        data.ativo = data.ativo === 'on';

        const response = await fetch('/integrationconfig', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': '<%= _csrf %>'
          },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          location.reload();
        } else {
          alert('Erro ao adicionar integração');
        }
      });

      <% configs.forEach(config => { %>
        document.getElementById('editIntegrationForm<%= config.id %>').addEventListener('submit', async function(event) {
          event.preventDefault();
          const formData = new FormData(event.target);
          const data = Object.fromEntries(formData.entries());
          data.headers = JSON.parse(data.headers || '{}');
          data.payload = JSON.parse(data.payload || '{}');
          data.ativo = data.ativo === 'on';

          const response = await fetch('/integrationconfig/<%= config.id %>', {
            method: 'PUT',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': '<%= _csrf %>'
            },
            body: JSON.stringify(data)
          });

          if (response.ok) {
            location.reload();
          } else {
            alert('Erro ao editar integração');
          }
        });
      <% }) %>

      async function deleteIntegration(id) {
        if (confirm('Tem certeza que deseja deletar esta integração?')) {
          const response = await fetch('/integrationconfig/' + id, {
            method: 'DELETE',
            headers: {
              'X-CSRF-Token': '<%= _csrf %>'
            }
          });

          if (response.ok) {
            location.reload();
          } else {
            alert('Erro ao deletar integração');
          }
        }
      }
    </script>
  </body>
  </html>
