<!DOCTYPE html>
<html>
<head>
  <title>Editar Organização de vendas</title>
  <!-- Bootstrap and jQuery JavaScript -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Editar Organização de Vendas</h1>

    <!-- Edit Organization Form -->
    <form method="POST" action="/organizacaoVendas/update/<%= organizacao.id %>" class="mb-4">
      <!-- CSRF Token -->
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
      <div class="form-row mt-3">
        <div class="form-group col-md-4">
          <label for="nome">Nome:</label>
          <input type="text" class="form-control" id="nome" name="nome" value="<%= organizacao.nome %>">
        </div>
        <div class="form-group col-md-4">
          <label for="descricao">Descrição:</label>
          <input type="text" class="form-control" id="descricao" name="descricao" value="<%= organizacao.descricao %>">
        </div>
        <div class="form-group col-md-4">
          <label for="codigo">Code:</label>
          <input type="text" class="form-control" id="codigo" name="codigo" value="<%= organizacao.codigo %>">
        </div>
        <div class="form-group col-md-4">
          <label for="ativo">Ativo:</label>
          <input type="checkbox" class="form-check-input" id="ativo" name="ativo" <%= organizacao.ativo ? 'checked' : '' %>>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="/organizacaoVendas/listar" class="btn btn-secondary">Cancelar</a>
      </div>
    </form>
  </div>

  <!-- Script to load and display organization data -->
  <script>
    // Function to load and display organization data
    function loadOrganization() {
      var organizacaoId = window.location.pathname.split('/').pop();
      $.ajax({
        type: 'GET',
        url: '/organizacaoVendas/editar/' + organizacaoId,
        success: function(response) {
          document.getElementById('nome').value = response.nome;
          document.getElementById('descricao').value = response.descricao;
          document.getElementById('codigo').value = response.codigo;
          document.getElementById('ativo').checked = response.ativo;
        },
        error: function(err) {
          console.error('Erro ao carregar a pagina organização de vendas:', err);
          alert('Erro ao carregar a pagina organização de vendas, tente novamente.');
        }
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
      loadOrganization();
    });
  </script>
</body>
</html>
