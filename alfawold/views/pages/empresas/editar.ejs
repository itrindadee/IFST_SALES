<!DOCTYPE html>
<html>
<head>
  <title>Editar Empresa</title>
  <!-- Inclua o JavaScript do Bootstrap e jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Inclua o CSS do Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Editar Empresa</h1>

    <!-- Formulário de Edição de Empresa -->
    <form method="POST" action="/empresas/atualizar" class="mb-4">
      <!-- Campo CSRF -->
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
      <!-- Campo para armazenar o ID da empresa -->
      <input type="hidden" name="empresaId" value="<%= empresa.id %>">

      <div class="form-row mt-3">
        <div class="form-group col-md-4">
          <label for="codigo">Código:</label>
          <input type="text" class="form-control" id="codigo" name="codigo" value="<%= empresa.codigo %>">
        </div>
        <div class="form-group col-md-4">
          <label for="razaoSocial">Razão Social:</label>
          <input type="text" class="form-control" id="razaoSocial" name="razaoSocial" value="<%= empresa.razaoSocial %>">
        </div>
        <div class="form-group col-md-4">
          <label for="cnpj">CNPJ:</label>
          <input type="text" class="form-control" id="cnpj" name="cnpj" value="<%= empresa.cnpj %>">
        </div>
        <div class="form-group col-md-4">
          <label for="endereco">Endereço:</label>
          <input type="text" class="form-control" id="endereco" name="endereco" value="<%= empresa.endereco %>">
        </div>
      </div>

      <!-- Botões de Ação -->
      <div class="mt-3">
        <button id="btnSalvar" type="submit" class="btn btn-primary">Salvar</button>
        <a href="/empresas/listar" class="btn btn-secondary">Cancelar</a>
      </div>
    </form>
  </div>

  <!-- Script para carregar e exibir os dados da empresa -->
  <script>
    // Função para carregar e exibir os dados da empresa
    function carregarEmpresa() {
      // Obtenha o ID da empresa da URL
      var empresaId = window.location.pathname.split('/').pop();

      // Envie uma solicitação AJAX para obter os dados da empresa
      $.ajax({
        type: 'GET',
        url: '/empresas/' + empresaId, // Rota para obter os dados da empresa
        success: function(response) {
          // Preencha os campos do formulário com os dados da empresa
          document.getElementById('codigo').value = response.codigo;
          document.getElementById('razaoSocial').value = response.razaoSocial;
          document.getElementById('cnpj').value = response.cnpj;
          document.getElementById('endereco').value = response.endereco;
        },
        error: function(err) {
          // Se houver um erro, exiba uma mensagem de erro
          console.error('Erro ao carregar os dados da empresa:', err);
          alert('Erro ao carregar os dados da empresa. Por favor, tente novamente.');
        }
      });
    }

    // Adicione um ouvinte de evento ao carregar a página
    document.addEventListener('DOMContentLoaded', function() {
      carregarEmpresa(); // Chama a função para carregar os dados da empresa
    });
  </script>
</body>
</html>
