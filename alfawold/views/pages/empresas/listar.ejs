<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Empresas</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Empresas</h1>

    <!-- Filtros -->
    <form method="GET" action="/empresas/listar" class="mb-4">
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="codigo">Código da Empresa:</label>
          <input type="text" class="form-control" id="codigo" name="codigo" value="<%= typeof codigo !== 'undefined' ? codigo : '' %>">
        </div>
        <div class="form-group col-md-3">
          <label for="razaoSocial">Razão Social:</label>
          <input type="text" class="form-control" id="razaoSocial" name="razaoSocial" value="<%= typeof razaoSocial !== 'undefined' ? razaoSocial : '' %>">
        </div>
        <div class="form-group col-md-3">
          <label for="cnpj">CNPJ:</label>
          <input type="text" class="form-control" id="cnpj" name="cnpj" value="<%= typeof cnpj !== 'undefined' ? cnpj : '' %>">
        </div>
        <div class="form-group col-md-3 d-flex align-items-end justify-content-end">
          <!-- Botão Filtrar (alinhado à direita) -->
          <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
      </div>
    </form>

    <!-- Botão Adicionar Empresa (alinhado à direita) -->
    <div class="form-row">
      <div class="form-group col-md-12 d-flex justify-content-end">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addEmpresaModal">Adicionar Empresa</button>
      </div>
    </div>

    <!-- Tabela de Empresas -->
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Código</th>
            <th>Razão Social</th>
            <th>CNPJ</th>
            <th>Endereço</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% empresas.forEach(empresa => { %>
            <tr>
              <td><%= empresa.codigo %></td>
              <td><%= empresa.razaoSocial %></td>
              <td><%= empresa.cnpj %></td>
              <td><%= empresa.endereco %></td>
              <td>
                <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editEmpresaModal<%= empresa.id %>">Editar</button>
                <button class="btn btn-danger btn-sm" onclick="deleteEmpresa(<%= empresa.id %>)">Deletar</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Modal para adicionar empresa -->
    <div class="modal fade" id="addEmpresaModal" tabindex="-1" role="dialog" aria-labelledby="addEmpresaModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addEmpresaModalLabel">Adicionar Empresa</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="addEmpresaForm">
              <div class="form-group">
                <label for="codigo">Código:</label>
                <input type="text" class="form-control" id="codigo" name="codigo" required>
              </div>
              <div class="form-group">
                <label for="razaoSocial">Razão Social:</label>
                <input type="text" class="form-control" id="razaoSocial" name="razaoSocial" required>
              </div>
              <div class="form-group">
                <label for="cnpj">CNPJ:</label>
                <input type="text" class="form-control" id="cnpj" name="cnpj" required>
              </div>
              <div class="form-group">
                <label for="endereco">Endereço:</label>
                <input type="text" class="form-control" id="endereco" name="endereco">
              </div>
              <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

<!-- Formulário de Edição no Modal -->
<% empresas.forEach(empresa => { %>
  <div class="modal fade" id="editEmpresaModal<%= empresa.id %>" tabindex="-1" role="dialog" aria-labelledby="editEmpresaModalLabel<%= empresa.id %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editEmpresaModalLabel<%= empresa.id %>">Editar Empresa</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="editEmpresaForm<%= empresa.id %>">
            <input type="hidden" name="id" value="<%= empresa.id %>">
            <div class="form-group">
              <label for="codigo<%= empresa.id %>">Código:</label>
              <input type="text" class="form-control" id="codigo<%= empresa.id %>" name="codigo" value="<%= empresa.codigo %>" required>
            </div>
            <div class="form-group">
              <label for="razaoSocial<%= empresa.id %>">Razão Social:</label>
              <input type="text" class="form-control" id="razaoSocial<%= empresa.id %>" name="razaoSocial" value="<%= empresa.razaoSocial %>" required>
            </div>
            <div class="form-group">
              <label for="cnpj<%= empresa.id %>">CNPJ:</label>
              <input type="text" class="form-control" id="cnpj<%= empresa.id %>" name="cnpj" value="<%= empresa.cnpj %>" required>
            </div>
            <div class="form-group">
              <label for="endereco<%= empresa.id %>">Endereço:</label>
              <input type="text" class="form-control" id="endereco<%= empresa.id %>" name="endereco" value="<%= empresa.endereco %>">
            </div>
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% }) %>

<!-- Scripts para manipulação do formulário -->
<script>
  document.getElementById('addEmpresaForm').addEventListener('submit', async function(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());

    const response = await fetch('/empresas', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': '<%= _csrf %>'
      },
      body: JSON.stringify(data)
    });

    if (response.ok) {
      location.reload();
    } else {
      const error = await response.json();
      alert(error.error || 'Erro ao adicionar empresa');
    }
  });

  <% empresas.forEach(empresa => { %>
    document.getElementById('editEmpresaForm<%= empresa.id %>').addEventListener('submit', async function(event) {
      event.preventDefault();
      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData.entries());

      const response = await fetch(`/empresas/${<%= empresa.id %>}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao atualizar empresa');
      }
    });
  <% }) %>

  async function deleteEmpresa(id) {
    if (confirm('Tem certeza que deseja deletar esta empresa?')) {
      const response = await fetch(`/empresas/${id}`, {
        method: 'DELETE',
        headers: {
          'X-CSRF-Token': '<%= _csrf %>'
        }
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao deletar empresa');
      }
    }
  }
</script>
</body>
</html>
