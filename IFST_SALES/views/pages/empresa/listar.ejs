<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Empresas</title>
  <!-- Inclua os arquivos CSS do Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css">
  <style>
    /* Estilos personalizados */
    .config-option {
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 20px;
      height: 100%;
    }
    .config-section {
      margin-top: 20px;
    }
    .btn:hover {
      background-color: #007bff; /* Azul padrão do Bootstrap */
      color: #fff; /* Cor do texto branco */
    }
    .row > [class*='col-'] {
      margin-bottom: 15px;
    }
    .table-responsive {
      margin-top: 20px;
    }
    .form-label {
      font-weight: bold;
    }
    .form-control {
      border-radius: 5px;
    }
    .table {
      margin-bottom: 0;
    }
    .table tbody tr:nth-child(even) {
      background-color: #f9f9f9; /* Cor para as linhas pares */
    }

    .table tbody tr:nth-child(odd) {
      background-color: #ffffff; /* Cor para as linhas ímpares */
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-md-4">
      <h1 class="text-center">Empresas</h1>

      <!-- Filtros -->
      <div class="config-section">
        <div class="row">
          <div class="col-md-3">
            <div class="config-option">
              <label for="codigo" class="form-label">Código da Empresa:</label>
              <input type="text" class="form-control" id="codigo" name="codigo" value="<%= typeof codigo !== 'undefined' ? codigo : '' %>">
            </div>
          </div>
          <div class="col-md-3">
            <div class="config-option">
              <label for="razaoSocial" class="form-label">Razão Social:</label>
              <input type="text" class="form-control" id="razaoSocial" name="razaoSocial" value="<%= typeof razaoSocial !== 'undefined' ? razaoSocial : '' %>">
            </div>
          </div>
          <div class="col-md-3">
            <div class="config-option">
              <label for="cnpj" class="form-label">CNPJ:</label>
              <input type="text" class="form-control" id="cnpj" name="cnpj" value="<%= typeof cnpj !== 'undefined' ? cnpj : '' %>">
            </div>
          </div>
          <div class="col-md-3 d-flex justify-content-end">
            <div class="config-option">
              <div class="row d-flex flex-column">
                <button type="submit" class="btn btn-primary mb-2">Filtrar</button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEmpresaModal">Adicionar Empresa</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Tabela de Empresas -->
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Código</th>
              <th>Razão Social</th>
              <th>CNPJ</th>
              <th>Endereço</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% empresas.forEach(empresa => { %>
              <tr>
                <td><%= empresa.codigo %></td>
                <td><%= empresa.razaoSocial %></td>
                <td><%= empresa.cnpj %></td>
                <td><%= empresa.endereco %></td>
                <td>
                  <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editEmpresaModal<%= empresa.id %>">Editar</button>
                  <button class="btn btn-danger btn-sm" onclick="deleteEmpresa(<%= empresa.id %>)">Deletar</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <!-- Modal para adicionar empresa -->
  <div class="modal fade" id="addEmpresaModal" tabindex="-1" aria-labelledby="addEmpresaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addEmpresaModalLabel">Adicionar Empresa</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="addEmpresaForm">
            <div class="mb-3">
              <label for="codigo" class="form-label">Código:</label>
              <input type="text" class="form-control" id="codigo" name="codigo" required>
            </div>
            <div class="mb-3">
              <label for="razaoSocial" class="form-label">Razão Social:</label>
              <input type="text" class="form-control" id="razaoSocial" name="razaoSocial" required>
            </div>
            <div class="mb-3">
              <label for="cnpj" class="form-label">CNPJ:</label>
              <input type="text" class="form-control" id="cnpj" name="cnpj" required>
            </div>
            <div class="mb-3">
              <label for="endereco" class="form-label">Endereço:</label>
              <input type="text" class="form-control" id="endereco" name="endereco">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Formulário de Edição no Modal -->
  <% empresas.forEach(empresa => { %>
    <div class="modal fade" id="editEmpresaModal<%= empresa.id %>" tabindex="-1" aria-labelledby="editEmpresaModalLabel<%= empresa.id %>" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editEmpresaModalLabel<%= empresa.id %>">Editar Empresa</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="editEmpresaForm<%= empresa.id %>">
              <input type="hidden" name="id" value="<%= empresa.id %>">
              <div class="mb-3">
                <label for="codigo<%= empresa.id %>" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo<%= empresa.id %>" name="codigo" value="<%= empresa.codigo %>" required>
              </div>
              <div class="mb-3">
                <label for="razaoSocial<%= empresa.id %>" class="form-label">Razão Social:</label>
                <input type="text" class="form-control" id="razaoSocial<%= empresa.id %>" name="razaoSocial" value="<%= empresa.razaoSocial %>" required>
              </div>
              <div class="mb-3">
                <label for="cnpj<%= empresa.id %>" class="form-label">CNPJ:</label>
                <input type="text" class="form-control" id="cnpj<%= empresa.id %>" name="cnpj" value="<%= empresa.cnpj %>" required>
              </div>
              <div class="mb-3">
                <label for="endereco<%= empresa.id %>" class="form-label">Endereço:</label>
                <input type="text" class="form-control" id="endereco<%= empresa.id %>" name="endereco" value="<%= empresa.endereco %>">
              </div>
              <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>

  <!-- Scripts para manipulação do formulário -->
  <script>
    document.getElementById('addEmpresaForm').addEventListener('submit', async function(event) {
      event.preventDefault();
      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData.entries());

      const response = await fetch('/empresa', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao adicionar empresa');
      }
    });

    <% empresas.forEach(empresa => { %>
    document.getElementById('editEmpresaForm<%= empresa.id %>').addEventListener('submit', async function(event) {
      event.preventDefault();
      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData.entries());

      const response = await fetch(`/empresa/${<%= empresa.id %>}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao atualizar empresa');
      }
    });
    <% }) %>

    async function deleteEmpresa(id) {
      if (confirm('Tem certeza que deseja deletar esta empresa?')) {
        const response = await fetch(`/empresa/${id}`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': '<%= _csrf %>'
          }
        });

        if (response.ok) {
          location.reload();
        } else {
          const error = await response.json();
          alert(error.error || 'Erro ao deletar empresa');
        }
      }
    }
  </script>

  <!-- Inclua os arquivos JS do Bootstrap no final do body -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/js/bootstrap.min.js"></script>
</body>
</html>
