<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listagem de Grupos de Produto</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Listagem de Grupos de Produto</h1>

    <!-- Botão para abrir o modal de criação de grupo de produto -->
    <div class="text-end mb-4">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addGrupoProdutoModal" onclick="resetAddGrupoProdutoForm()">
        Adicionar Grupo de Produto
      </button>
    </div>

    <!-- Tabela de grupos de produto existentes -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Código</th>
          <th>Descrição</th>
          <th>Ativo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% gruposProduto.forEach(grupoProduto => { %>
        <tr>
          <td><%= grupoProduto.codigo %></td>
          <td><%= grupoProduto.descricao %></td>
          <td><%= grupoProduto.ativo ? 'Sim' : 'Não' %></td>
          <td>
            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editGrupoProdutoModal<%= grupoProduto.id %>">Editar</button>
            <button class="btn btn-danger btn-sm" onclick="deleteGrupoProduto(<%= grupoProduto.id %>)">Deletar</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Modal para adicionar grupo de produto -->
  <div class="modal fade" id="addGrupoProdutoModal" tabindex="-1" aria-labelledby="addGrupoProdutoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addGrupoProdutoModalLabel">Adicionar Grupo de Produto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="addGrupoProdutoForm">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="codigo" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo" name="codigo" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao" name="descricao" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="ativo" class="form-label">Ativo:</label>
                <input type="checkbox" class="form-check-input" id="ativo" name="ativo" checked>
              </div>
            </div>
            <div class="row">
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Criar Grupo de Produto</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modais para editar grupo de produto -->
  <% gruposProduto.forEach(grupoProduto => { %>
  <div class="modal fade" id="editGrupoProdutoModal<%= grupoProduto.id %>" tabindex="-1" aria-labelledby="editGrupoProdutoModalLabel<%= grupoProduto.id %>" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editGrupoProdutoModalLabel<%= grupoProduto.id %>">Editar Grupo de Produto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editGrupoProdutoForm<%= grupoProduto.id %>">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="codigo<%= grupoProduto.id %>" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo<%= grupoProduto.id %>" name="codigo" value="<%= grupoProduto.codigo %>" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="descricao<%= grupoProduto.id %>" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao<%= grupoProduto.id %>" name="descricao" value="<%= grupoProduto.descricao %>" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="ativo<%= grupoProduto.id %>" class="form-label">Ativo:</label>
                <input type="checkbox" class="form-check-input" id="ativo<%= grupoProduto.id %>" name="ativo" <%= grupoProduto.ativo ? 'checked' : '' %>>
              </div>
            </div>
            <div class="row">
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% }) %>

  <!-- Scripts -->
  <script>
    function resetAddGrupoProdutoForm() {
      document.getElementById('addGrupoProdutoForm').reset();
    }

    document.getElementById('addGrupoProdutoForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      const data = {
        codigo: document.getElementById('codigo').value,
        descricao: document.getElementById('descricao').value,
        ativo: document.getElementById('ativo').checked
      };

      const response = await fetch('/grupoproduto', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao criar grupo de produto');
      }
    });

    <% gruposProduto.forEach(grupoProduto => { %>
    document.getElementById('editGrupoProdutoForm<%= grupoProduto.id %>').addEventListener('submit', async function(event) {
      event.preventDefault();

      const data = {
        codigo: document.getElementById(`codigo<%= grupoProduto.id %>`).value,
        descricao: document.getElementById(`descricao<%= grupoProduto.id %>`).value,
        ativo: document.getElementById(`ativo<%= grupoProduto.id %>`).checked
      };

      const response = await fetch(`/grupoproduto/<%= grupoProduto.id %>`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao atualizar grupo de produto');
      }
    });
    <% }) %>

    async function deleteGrupoProduto(id) {
      if (confirm('Tem certeza que deseja deletar este grupo de produto?')) {
        const response = await fetch(`/grupoproduto/${id}`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': '<%= _csrf %>'
          }
        });

        if (response.ok) {
          location.reload();
        } else {
          const error = await response.json();
          alert(error.error || 'Erro ao deletar grupo de produto');
        }
      }
    }
  </script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
