<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listagem de Categorias</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Listagem de Categorias</h1>

    <!-- Botão para abrir o modal de criação de categoria -->
    <div class="text-end mb-4">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoriaModal" onclick="resetAddCategoriaForm()">
        Adicionar Categoria
      </button>
    </div>

    <!-- Tabela de categorias existentes -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Código</th>
          <th>Descrição</th>
          <th>Ativo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% categorias.forEach(categoria => { %>
        <tr>
          <td><%= categoria.codigo %></td>
          <td><%= categoria.descricao %></td>
          <td><%= categoria.ativo ? 'Sim' : 'Não' %></td>
          <td>
            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editCategoriaModal<%= categoria.id %>">Editar</button>
            <button class="btn btn-danger btn-sm" onclick="deleteCategoria(<%= categoria.id %>)">Deletar</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Modal para adicionar categoria -->
  <div class="modal fade" id="addCategoriaModal" tabindex="-1" aria-labelledby="addCategoriaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addCategoriaModalLabel">Adicionar Categoria</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="addCategoriaForm">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="codigo" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo" name="codigo" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao" name="descricao" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="ativo" class="form-label">Ativo:</label>
                <input type="checkbox" class="form-check-input" id="ativo" name="ativo" checked>
              </div>
            </div>
            <div class="row">
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Criar Categoria</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modais para editar categoria -->
  <% categorias.forEach(categoria => { %>
  <div class="modal fade" id="editCategoriaModal<%= categoria.id %>" tabindex="-1" aria-labelledby="editCategoriaModalLabel<%= categoria.id %>" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editCategoriaModalLabel<%= categoria.id %>">Editar Categoria</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editCategoriaForm<%= categoria.id %>">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="codigo<%= categoria.id %>" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo<%= categoria.id %>" name="codigo" value="<%= categoria.codigo %>" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="descricao<%= categoria.id %>" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao<%= categoria.id %>" name="descricao" value="<%= categoria.descricao %>" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="ativo<%= categoria.id %>" class="form-label">Ativo:</label>
                <input type="checkbox" class="form-check-input" id="ativo<%= categoria.id %>" name="ativo" <%= categoria.ativo ? 'checked' : '' %>>
              </div>
            </div>
            <div class="row">
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% }) %>

  <!-- Scripts -->
  <script>
    function resetAddCategoriaForm() {
      document.getElementById('addCategoriaForm').reset();
    }

    document.getElementById('addCategoriaForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      const data = {
        codigo: document.getElementById('codigo').value,
        descricao: document.getElementById('descricao').value,
        ativo: document.getElementById('ativo').checked
      };

      const response = await fetch('/categoria', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao criar categoria');
      }
    });

    <% categorias.forEach(categoria => { %>
    document.getElementById('editCategoriaForm<%= categoria.id %>').addEventListener('submit', async function(event) {
      event.preventDefault();

      const data = {
        codigo: document.getElementById(`codigo<%= categoria.id %>`).value,
        descricao: document.getElementById(`descricao<%= categoria.id %>`).value,
        ativo: document.getElementById(`ativo<%= categoria.id %>`).checked
      };

      const response = await fetch(`/categoria/<%= categoria.id %>`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao atualizar categoria');
      }
    });
    <% }) %>

    async function deleteCategoria(id) {
      if (confirm('Tem certeza que deseja deletar esta categoria?')) {
        const response = await fetch(`/categoria/${id}`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': '<%= _csrf %>'
          }
        });

        if (response.ok) {
          location.reload();
        } else {
          const error = await response.json();
          alert(error.error || 'Erro ao deletar categoria');
        }
      }
    }
  </script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
