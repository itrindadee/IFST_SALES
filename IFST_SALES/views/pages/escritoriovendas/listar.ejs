<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listagem de Escritórios de Vendas</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Listagem de Escritórios de Vendas</h1>

    <!-- Botão para abrir o modal de criação de escritório de vendas -->
    <div class="text-end mb-4">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEscritorioVendasModal" onclick="resetAddEscritorioVendasForm()">
        Adicionar Escritório de Vendas
      </button>
    </div>

    <!-- Tabela de escritórios de vendas existentes -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Organização Vendas</th>
          <th>Código</th>
          <th>Descrição</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% escritorios.forEach(escritorio => { %>
        <tr>
          <td><%= escritorio.organizacaoVendas %></td>
          <td><%= escritorio.codigo %></td>
          <td><%= escritorio.descricao %></td>
          <td>
            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editEscritorioVendasModal<%= escritorio.id %>">Editar</button>
            <button class="btn btn-danger btn-sm" onclick="deleteEscritorioVendas(<%= escritorio.id %>)">Deletar</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Modal para adicionar escritório de vendas -->
  <div class="modal fade" id="addEscritorioVendasModal" tabindex="-1" aria-labelledby="addEscritorioVendasModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addEscritorioVendasModalLabel">Adicionar Escritório de Vendas</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="addEscritorioVendasForm">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="organizacaoVendas" class="form-label">Organização Vendas:</label>
                <input type="text" class="form-control" id="organizacaoVendas" name="organizacaoVendas" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="codigo" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo" name="codigo" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao" name="descricao" required>
              </div>
            </div>
            <div class="row">
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Criar Escritório de Vendas</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modais para editar escritório de vendas -->
  <% escritorios.forEach(escritorio => { %>
  <div class="modal fade" id="editEscritorioVendasModal<%= escritorio.id %>" tabindex="-1" aria-labelledby="editEscritorioVendasModalLabel<%= escritorio.id %>" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editEscritorioVendasModalLabel<%= escritorio.id %>">Editar Escritório de Vendas</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editEscritorioVendasForm<%= escritorio.id %>">
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="organizacaoVendas<%= escritorio.id %>" class="form-label">Organização Vendas:</label>
                <input type="text" class="form-control" id="organizacaoVendas<%= escritorio.id %>" name="organizacaoVendas" value="<%= escritorio.organizacaoVendas %>" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="codigo<%= escritorio.id %>" class="form-label">Código:</label>
                <input type="text" class="form-control" id="codigo<%= escritorio.id %>" name="codigo" value="<%= escritorio.codigo %>" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="descricao<%= escritorio.id %>" class="form-label">Descrição:</label>
                <input type="text" class="form-control" id="descricao<%= escritorio.id %>" name="descricao" value="<%= escritorio.descricao %>" required>
              </div>
            </div>
            <div class="row">
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% }) %>

  <!-- Scripts -->
  <script>
    function resetAddEscritorioVendasForm() {
      document.getElementById('addEscritorioVendasForm').reset();
    }

    document.getElementById('addEscritorioVendasForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      const data = {
        organizacaoVendas: document.getElementById('organizacaoVendas').value,
        codigo: document.getElementById('codigo').value,
        descricao: document.getElementById('descricao').value
      };

      const response = await fetch('/escritoriovendas', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao criar escritório de vendas');
      }
    });

    <% escritorios.forEach(escritorio => { %>
    document.getElementById('editEscritorioVendasForm<%= escritorio.id %>').addEventListener('submit', async function(event) {
      event.preventDefault();

      const data = {
        organizacaoVendas: document.getElementById(`organizacaoVendas<%= escritorio.id %>`).value,
        codigo: document.getElementById(`codigo<%= escritorio.id %>`).value,
        descricao: document.getElementById(`descricao<%= escritorio.id %>`).value
      };

      const response = await fetch(`/escritoriovendas/<%= escritorio.id %>`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= _csrf %>'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        location.reload();
      } else {
        const error = await response.json();
        alert(error.error || 'Erro ao atualizar escritório de vendas');
      }
    });
    <% }) %>

    async function deleteEscritorioVendas(id) {
      if (confirm('Tem certeza que deseja deletar este escritório de vendas?')) {
        const response = await fetch(`/escritoriovendas/${id}`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': '<%= _csrf %>'
          }
        });

        if (response.ok) {
          location.reload();
        } else {
          const error = await response.json();
          alert(error.error || 'Erro ao deletar escritório de vendas');
        }
      }
    }
  </script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
